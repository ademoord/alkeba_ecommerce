                                                            <!-- <ul id="brandisA"> -->
                                                                <!-- <li>
                                                                    <a href="">Alamanda</a>
                                                                </li> -->
                                                            <!-- </ul> -->
                                                        <!-- </div> -->
                                                    </div>
                                                </div>

                                                <div class="featured-brand">
                                                    <h6>Featured Brands</h6>
                                                    <div class="d-flex flex-wrap justify-content-between featured-brand-list">

                                                        <!-- check if the objects is not empty  -->
                                                        <t t-if="product_brands">
                                                            <t t-foreach="product_brands" t-as="brand">
                                                                <t t-if="brand.brand_image">
                                                                    <a href="">
                                                                        <img t-att-src="'data:image/png;base64,' + brand.brand_image.decode('utf-8')"/>
                                                                    </a>
                                                                </t>
                                                            </t>
                                                        </t>

                                                        <!-- pass the static assets if empty -->
                                                        <t t-else="">
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_1.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_2.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_3.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_4.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_5.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_6.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_7.jpg"/>
                                                            </a>
                                                            <a href="">
                                                                <img src="/theme_alkeba/static/src/images/brand/brand_8.jpg"/>
                                                            </a>
                                                        </t>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </li>
                                    <li>
                                        <a href="/blog" class="text-sm font-medium desktop-only">Berita</a>
                                    </li>
                                    <li>
                                        <a href="/about-us" class="text-sm font-medium pr-5 desktop-only">Tentang Kami</a>
                                    </li>
                                   <li>
                                       <!-- <a href="#" class="text-sm font-medium pl-5"> -->
                                       <!-- <a href="/under_maintenance" class="text-sm font-medium"> -->
                                       <a href="/order-shipment-tracking" class="text-sm font-medium">
                                           <i class="icon-location-marker"></i>
                                           <span class="ic-tracking"></span>
                                           <b>Tracking Order</b>
                                       </a>
                                   </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </header>
            </div>
        </xpath>
    </template>
</odoo>